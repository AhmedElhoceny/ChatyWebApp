@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatApp/SignIn</title>
    <link href="~/css/Index.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</head>
<body style="direction:rtl">
    <form class="LogInContainer">
        <div class="SignInPlaceHolder"></div>
        <div class="subContainer">
            <h2 style="align-self: center;color:#000">دخول</h2>
            <div class="form-group row" style="margin-left: -93px !important;">
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail3" placeholder="الاسم">
                </div>
            </div>
            <div class="form-group row" style="margin-left: -93px !important;">
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword3" placeholder="كلمة المرور">
                </div>
            </div>
            <button class="btn btn-success" type="button" onclick="logIn_Arabic()" style="color:#000">دخول</button>
            <a href="/Home/Arabic" style=" margin: auto; color: #000;">رجوع</a>
        </div>
    </form>
        <script>
        async function  logIn_Arabic (){
    var formData = new FormData();

    let UserName = document.getElementById("inputEmail3").value;
    let PassWord = document.getElementById("inputPassword3").value;

    formData.append("UserName" , UserName);
    formData.append("PassWord" , PassWord);

    fetch('/Home/LogInPost', {
        method: 'POST',
        body: formData
    }).then(res => {
        res.text().then(data =>{
            if (data == "Admin") {
                window.location.href = "/Admin/Index_Arabic"
            } else {
                if(data != "No_One"){
                    window.location.href = "/Client/ShowMessages_Arabic?Name=" + data
                }
            }
        })
    });
    
}
    </script>
    <script src="~/js/site.js"></script>
</body>
</html>