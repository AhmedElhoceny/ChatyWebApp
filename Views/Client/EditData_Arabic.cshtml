@model Chaty.Models.Clients

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatApp/EditProdile</title>
    <link href="~/css/Index.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body style="background: -webkit-linear-gradient(left, #25c481, #25b7c4);
background: linear-gradient(to right, #25c481, #25b7c4);
font-family: 'Roboto', sans-serif;direction:rtl">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="    position: fixed;
    width: 100%;
    background-color: transparent !important;">
        <a style=" font-size: 28px; position: absolute; left: 32px; top: 17px;" class="navbar-brand" href="#">Chaty</a>
    </nav>
    <div class="container bootstrap snippets bootdey" style="margin-top: 139px;">
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    @if (Model.Imgae == "None")
                    {
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    }
                    else
                    {
                        <img style="width: 200px; height: 170px;" src="~/@Model.Imgae" />
                    }
                </div>
            </div>

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <h3 style="text-align: right;">بيانات العميل</h3>
                <form class="form-horizontal" role="form" enctype="multipart/form-data" method="post" action="/Client/EditDataPost_Arabic">
                    <input type="hidden" value="@Model.Id" id="ItemId" name="ItemId" />
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">الكود الخاص بك</label>
                        <div class="col-lg-8">
                            <input class="form-control" disabled type="text" value="@Model.UserCode">
                        </div>
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">الاسم</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="@Model.Name" id="EditName" name="EditName">
                        </div>
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">الايميل</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="email" value="@Model.Email" id="EditEmail" name="EditEmail">
                        </div>
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">رقم الموبايل</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="tel" value="@Model.PhoneNumber" id="EditNumber" name="EditNumber">
                        </div>
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">كلمة المرور</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="password" value="@Model.PassWord" id="EditPassWord" name="EditPassWord">
                        </div>
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">تأكيد كلمة المرور</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="password" value="@Model.PassWord" id="EditConfirmPassWord" name="EditConfirmPassWord">
                        </div>
                    </div>
                    <div class="form-group" style="text-align: right;">
                        <label class="col-lg-3 control-label">ارفع صورة مختلفة</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="file" id="file" name="file">
                        </div>
                    </div>
                    <button class="btn btn-success" type="submit">حفظ التعديلات</button>
                    <button class="btn btn-primary" type="button" onclick="window.location.href = '/Client/ShowMessages_Arabic?Name=@Model.Name'">رجوع</button>
                </form>
            </div>
        </div>
    </div>
    <hr>
    <script src="~/js/site.js"></script>
</body>
</html>