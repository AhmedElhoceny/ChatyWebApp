@model Chaty.ViewModels.MessagesViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatApp/UserMessage</title>
    <link href="~/css/Index.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>
<body style="background: -webkit-linear-gradient(left, #25c481, #25b7c4);
background: linear-gradient(to right, #25c481, #25b7c4);
font-family: 'Roboto', sans-serif;direction:rtl">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="    position: fixed;
    width: 100%;
    background-color: transparent !important;">
        <a style=" font-size: 28px; position: absolute; left: 32px; top: 17px;" class="navbar-brand" href="#">Chaty</a>
        <input type="checkbox" id="active">
        <label for="active" class="menu-btn">القائمة<i style="opacity:0" class="fas fa-bars"></i></label>
        <div class="wrapper">
            <ul>
                <li><a href="/Client/ShowMessages_Arabic?Name=@Model.Client.Name">الرسائل</a></li>
                <li><a href="/Client/EditData_Arabic?Name=@Model.Client.Name">تعديل البيانات</a></li>
                <li><a href="/ChatBot/ChatBotView">خدمة ال ChatBot</a></li>
                <li><a href="/Client/ShowOffers?Name=@Model.Client.Name">حجز باقات</a></li>
                <li><a href="/Home/Arabic">خروج</a></li>
            </ul>
        </div>
    </nav>
    <div class="PersonAvatar">
        @if (Model.Client.Imgae == "None")
        {
            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" />
        }
        else
        {
            <img src="~/@(Model.Client.Imgae)" />
        }
        <p>@Model.Client.Name</p>
    </div>
    <h2 style="margin: auto; color: #fff;">الرسائل</h2>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>الكود</th>
                    <th>الي</th>
                    <th>الرسالة</th>
                    <th>الصورة</th>
                    <th>اللينك</th>
                    <th>الحالة</th>
                </tr>

            </thead>
        </table>
    </div>
    <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model.Messages)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.ToPhoneNumber</td>
                        @if (item.MessageContent != null)
                        {
                            <td>Exist</td>
                        }
                        else
                        {
                            <td>Not Exist</td>
                        }
                        @if (item.Link != null)
                        {
                            <td>Exist</td>
                        }
                        else
                        {
                            <td>Not Exist</td>
                        }
                        @if (item.ImageURL != null)
                        {
                            <td>Exist</td>
                        }
                        else
                        {
                            <td>Not Exist</td>
                        }
                        <td>@item.State</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>