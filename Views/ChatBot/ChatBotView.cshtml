@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Contact V1</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/IMGs/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css-hamburgers/hamburgers.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/select2/select2.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/util.css" rel="stylesheet" />
    <link href="~/css/main2.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="contact1">
        <div class="container-contact1">
            <div class="contact1-pic js-tilt" data-tilt>
                <img src="~/IMGs/img-01.png" />

            </div>
            <form class="contact1-form validate-form" method="post" action="/ChatBot/AddChatBotItemToClient">
                <span class="contact1-form-title">
                    Build Your ChatBot
                </span>

                <div class="wrap-input1 validate-input" data-validate="Name is required">
                    <input class="input1" type="text" name="ClientCode" id="ClientCode" placeholder="Your Code Please ">
                    <span class="shadow-input1"></span>
                </div>

                <div class="wrap-input1 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input class="input1" type="text" name="Question" id="Question" placeholder="The Question is ...">
                    <span class="shadow-input1"></span>
                </div>

                <div class="wrap-input1 validate-input" data-validate="Message is required">
                    <textarea class="input1" name="Answer" id="Answer" placeholder="The Answer is ..."></textarea>
                    <span class="shadow-input1"></span>
                </div>

                <div class="container-contact1-form-btn">
                    <button class="contact1-form-btn" onclick="SubmitChatBotData()" type="button">
                        <span>
                            Submit
                            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                        </span>
                    </button>
                </div>
                <a class="btn btn-success" href="/ChatBot/ShowMyChatBot" style=" margin-top: 14px; position: relative; left: 12%; border-radius: 13px;">Show My ChatBot</a>
                <a class="btn btn-success" href="/Home/Index" style=" margin-top: 14px; position: relative; left: 25%; border-radius: 13px;">Back</a>
            </form>
         
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/bootstrap/js/popper.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <!--===============================================================================================-->
    <script src="~/select2/select2.js"></script>
    <!--===============================================================================================-->
    <script src="~/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
        var SubmitChatBotData = () => {
            var ClientCode = document.getElementById("ClientCode").value;
            var Question = document.getElementById("Question").value;
            var Answer = document.getElementById("Answer").value;
            fetch("/ChatBot/AddChatBotItemToClient?ClientCode=" + ClientCode + "&Question=" + Question + "&Answer=" + Answer)
                .then(res => {
                    res.text().then(data => {
                        if (data == "Done") {
                            alert("Done");
                        } else {
                            alert("Failed");
                        }
                    })
                })
        }
    </script>

    <!--===============================================================================================-->

    <script src="~/js/main2.js"></script>

</body>
</html>
